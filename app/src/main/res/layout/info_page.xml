<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/scroll_trab"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:alpha="0.4"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:elevation="40dp"
                    app:srcCompat="@drawable/graduitnactivaty2" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="5dp"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tllb"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ttr"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="#969798" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/buttonshape"
                            android:backgroundTint="#81464B51"
                            app:cardCornerRadius="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#31363B" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonshape"
                                android:backgroundTint="#81464B51"
                                android:clickable="true"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView9"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arabic"
                                        android:text="Status"
                                        android:textAlignment="center"
                                        android:textColor="#BDBDBD"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textView102"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="@font/tllb"
                                        android:text="TextView"
                                        android:textAlignment="center"
                                        android:textColor="#AAAAAA"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:alpha="0.2" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView91"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arabic"
                                        android:text="Popularity"
                                        android:textAlignment="center"
                                        android:textColor="#BDBDBD"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/textView104"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="2dp"
                                        android:fontFamily="@font/tllb"
                                        android:text="TextView"
                                        android:textAlignment="center"
                                        android:textColor="#AAAAAA"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:alpha="0.2" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="#31363B"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView92"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/arabic"
                                        android:text="Score"
                                        android:textAlignment="center"
                                        android:textColor="#BDBDBD"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:orientation="horizontal">

                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent">

                                                <ImageView
                                                    android:id="@+id/imageView9"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:layout_centerInParent="true"
                                                    app:srcCompat="@drawable/baseline_tag_faces_24" />
                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent">

                                                <TextView
                                                    android:id="@+id/textView107"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:layout_marginTop="5dp"
                                                    android:layout_marginBottom="2dp"
                                                    android:fontFamily="@font/tllb"
                                                    android:text="0.0"
                                                    android:textAlignment="center"
                                                    android:textColor="#AAAAAA"
                                                    android:textSize="16sp" />
                                            </RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:backgroundTint="#111111"
                            android:fontFamily="@font/tllb"
                            android:text="no description"
                            android:textColor="#FFFFFF" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:scrollbarSize="0dp">

                            <LinearLayout
                                android:id="@+id/tags"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:elevation="50dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="115dp"
                            android:layout_height="160dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="30dp"
                            app:cardCornerRadius="9dp"
                            app:cardElevation="5dp">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/buttonshape"
                                    android:backgroundTint="#D831363B"
                                    android:orientation="vertical"
                                    android:padding="5dp"
                                    android:visibility="gone">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/textView14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:fontFamily="@font/tllb"
                                            android:text="TextView"
                                            android:textColor="#FFFFFF"
                                            android:textSize="10sp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>